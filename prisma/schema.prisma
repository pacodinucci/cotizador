generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Zone {
  id        String   @id @default(uuid())
  code      String   @unique
  title     String
  zone      String
  smallZone Boolean
  mainZone  Boolean
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  combos Combo[] @relation("ComboZones")
}

model Combo {
  id         String   @id @default(uuid())
  title      String
  price      Int
  smallZones Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  zones Zone[] @relation("ComboZones")
}
